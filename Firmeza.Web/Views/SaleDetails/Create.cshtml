<div class="card p-4 shadow-sm mb-4">
@model Firmeza.Web.Models.Entities.SaleDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Detalles de la venta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="mb-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SaleId" class="control-label"></label>
                <select asp-for="SaleId" class ="form-control" asp-items="ViewBag.SaleId" class="form-select"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId" class="form-select"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" / class="form-control mb-3">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" / class="form-control mb-3">
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" / class="form-control mb-3">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary"> Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

</div>