<div class="card p-4 shadow-sm mb-4">
@model Firmeza.Web.Models.Entities.SaleDetail

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Estas seguro de eliminar esto?</h3>
<div>
    <h4>SaleDetail</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sale)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sale!.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product!.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UnitPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="mb-4">
        <input type="hidden" asp-for="Id" / class="form-control mb-3">
        <input type="submit" value="Delete" class="btn btn-danger" / class="form-control mb-3"> |
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>

</div>