@model IEnumerable<Firmeza.Web.Models.Entities.SaleDetail>

@{
    ViewData["Title"] = "Detalles de Ventas";
}

<div class="card p-4 shadow-sm border-0 mb-4">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">

        <div>
            <h1 class="h3 fw-bold text-primary mb-1">
                <i class="fas fa-tags me-2"></i> Detalles de Ventas
            </h1>
            <p class="text-muted m-0">Listado de productos incluidos en las ventas.</p>
        </div>

        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i> Nuevo Detalle
        </a>

    </div>

</div>

<div class="card shadow-sm border-0">

    <div class="card-body p-0">

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">

                <thead class="bg-light text-muted small">
                    <tr>
                        <th class="ps-4">Venta</th>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>

                <tbody>

                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-box-open fa-3x opacity-25 mb-3"></i>
                                <p class="mb-0">No hay detalles registrados.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>

                                <!-- ID Venta -->
                                <td class="ps-4 text-muted">
                                    #@item.SaleId
                                </td>

                                <!-- Producto -->
                                <td class="fw-semibold">
                                    @item.Product?.Name
                                </td>

                                <!-- Cantidad -->
                                <td>
                                    <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-3">
                                        @item.Quantity
                                    </span>
                                </td>

                                <!-- Precio -->
                                <td class="fw-bold text-success">
                                    @item.UnitPrice.ToString("C", new System.Globalization.CultureInfo("es-CO"))
                                </td>

                                <!-- Acciones -->
                                <td class="text-end pe-4">

                                    <div class="btn-group">

                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary" title="Detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>

                                    </div>

                                </td>

                            </tr>
                        }
                    }

                </tbody>

            </table>
        </div>

    </div>

</div>
