<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Firmeza</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Icons & Fonts -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: #eef1f6;
        }

        /* --- NAVBAR --- */
        .navbar {
            background: linear-gradient(90deg, #004e92, #000428) !important;
            box-shadow: 0px 4px 14px rgba(0,0,0,0.4);
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: 0.7px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .nav-link {
            font-weight: 500;
            padding: 8px 15px !important;
            margin-right: 4px;
            border-radius: 8px;
            transition: 0.25s;
            color: #dbe9ff !important;
        }

        .nav-link:hover {
            background-color: rgba(255,255,255,0.15);
        }

        .nav-link.active {
            background: #00b4db;
            color: #000 !important;
            font-weight: 600;
        }

        /* USER BOX */
        .user-info {
            display: flex;
            align-items: center;
            gap: 14px;
            padding: 6px 14px;
            background: rgba(255,255,255,0.1);
            border-radius: 14px;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #00b4db;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: 700;
            color: #000;
            box-shadow: 0 3px 6px rgba(0,0,0,0.35);
        }

        .btn-logout {
            border-color: #ff7676 !important;
            color: #ff9b9b !important;
        }

        .btn-logout:hover {
            background: #ff4b4b !important;
            border-color: #ff4b4b !important;
            color: #fff !important;
        }

        main.container {
            margin-top: 95px;
        }
    </style>

</head>

<body>

    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top">
            <div class="container-fluid">

                <!-- LOGO -->
                <a class="navbar-brand" asp-controller="Products" asp-action="Index">
                    <i class="fa-solid fa-screwdriver-wrench text-info"></i>
                    Firmeza
                </a>

                <!-- Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <!-- MENU -->
                        <ul class="navbar-nav me-auto mb-2 mb-md-0">

                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Products" ? "active" : "")"
                                   asp-controller="Products" asp-action="Index">
                                    <i class="fa-solid fa-box-open me-1"></i> Productos
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Sale" ? "active" : "")"
                                   asp-controller="Sale" asp-action="Index">
                                    <i class="fa-solid fa-cart-shopping me-1"></i> Ventas
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" ? "active" : "")"
                                   asp-controller="Users" asp-action="Index">
                                    <i class="fa-solid fa-users me-1"></i> Usuarios
                                </a>
                            </li>

                        </ul>

                        <!-- USER INFO -->
                        <div class="d-flex align-items-center user-info text-white">

                            <div class="user-avatar">
                                @User.Identity.Name?.Substring(0,1).ToUpper()
                            </div>

                            <div class="d-none d-md-block">
                                <small class="text-light opacity-75">Bienvenido</small><br>
                                <span class="fw-bold">@User.Identity.Name</span>
                            </div>

                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-outline-light btn-sm ms-2 btn-logout">
                                    <i class="fa-solid fa-right-from-bracket"></i>
                                    Salir
                                </button>
                            </form>

                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container">
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
