<div class="card p-4 shadow-sm mb-4">
@model Firmeza.Web.Models.Entities.Sale

@{
    ViewData["Title"] = "Detalles de Venta";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">Detalles de la Venta #@Model.Id</h2>
        <a asp-action="Index" class="btn btn-outline-secondary fw-semibold rounded-3 px-4">Volver</a>
    </div>

    <div class="card shadow-lg border-0 rounded-4 mb-4">
        <div class="card-header bg-light border-0 py-3">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-1 fw-bold text-dark">Cliente: <span class="text-primary">@(Model.User?.FullName ??
                                                        "N/A")</span></h5>
                    <p class="mb-0 text-muted">Fecha: @Model.Date.ToLocalTime().ToString("F")</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <h4 class="fw-bold text-success mb-0">Total: @Model.Total.ToString("C", new
                                                System.Globalization.CultureInfo("es-CO"))</h4>
                    <small class="text-muted">IVA incluido: @Model.Vat.ToString("C", new
                                                System.Globalization.CultureInfo("es-CO"))</small>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <h5 class="fw-bold mb-3">Productos</h5>
            <div class="table-responsive">
                <table class="table table-bordered align-middle" class="table table-striped table-hover">
                    <thead class="table-light text-center">
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.SaleDetails != null && Model.SaleDetails.Any())
                        {
                            foreach (var detail in Model.SaleDetails)
                            {
                                <tr class="text-center">
                                    <td>@(detail.Product?.Name ?? "Producto eliminado")</td>
                                    <td>@detail.Quantity</td>
                                    <td>@detail.UnitPrice.ToString("C", new System.Globalization.CultureInfo("es-CO"))</td>
                                    <td class="fw-bold">@((detail.Quantity * detail.UnitPrice).ToString("C", new
                                                                        System.Globalization.CultureInfo("es-CO")))</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">No hay detalles disponibles.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-0 py-3 text-end">
            <a asp-action="DownloadReceipt" asp-route-id="@Model.Id" class="btn btn-primary fw-semibold rounded-3 px-4">
                <i class="bi bi-file-earmark-pdf"></i> Descargar Recibo
            </a>
        </div>
    </div>
</div>
</div>