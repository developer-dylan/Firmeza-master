@using Firmeza.Identity
@model Firmeza.Web.Models.PaginatedList<AppUser>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="card p-4 shadow-sm mb-4 border-0">

    <!-- Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-1 fw-bold">Usuarios</h1>
            <p class="text-muted m-0">Administra los clientes y administradores registrados en el sistema.</p>
        </div>

        <div class="d-flex flex-wrap gap-2">
            <div class="btn-group shadow-sm">
                <a asp-controller="Excel" asp-action="ExportClients" class="btn btn-outline-secondary">
                    <i class="fas fa-file-excel"></i> Excel
                </a>
                <a asp-controller="Reports" asp-action="ExportClientsPdf" class="btn btn-outline-secondary">
                    <i class="fas fa-file-pdf text-danger"></i> PDF
                </a>
            </div>

            <a asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="fas fa-plus"></i> Nuevo Usuario
            </a>
        </div>
    </div>

    <!-- Tabla -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Nombre</th>
                            <th>Documento</th>
                            <th>Email</th>
                            <th>Teléfono</th>
                            <th>Fecha Registro</th>
                            <th class="text-end pe-4">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!Model.Items.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <div class="d-flex flex-column align-items-center">
                                        <i class="fas fa-users fa-3x mb-3 opacity-25"></i>
                                        <p class="mb-0">No hay usuarios registrados.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="fw-medium ps-4">
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="rounded-circle bg-primary bg-opacity-10 text-primary fw-bold
                                                        d-flex align-items-center justify-content-center"
                                                 style="width: 38px; height: 38px; font-size: 0.9rem;">
                                                @item.FullName?.Substring(0, 1).ToUpper()
                                            </div>
                                            @item.FullName
                                        </div>
                                    </td>

                                    <td>@item.DocumentNumber</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td class="text-muted small">@item.RegisterDate.ToString("dd/MM/yyyy")</td>

                                    <td class="text-end pe-4">
                                        <div class="btn-group">
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-secondary" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-secondary" title="Detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Paginación -->
        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-light border-0">
                <nav aria-label="Paginación">
                    <ul class="pagination pagination-sm mb-0 justify-content-center">

                        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)">
                                <i class="fas fa-chevron-left"></i> Anterior
                            </a>
                        </li>

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                            </li>
                        }

                        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)">
                                Siguiente <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>

                    </ul>
                </nav>

                <div class="text-center mt-2">
                    <small class="text-muted">
                        Página @Model.PageIndex de @Model.TotalPages (@Model.TotalCount usuarios)
                    </small>
                </div>
            </div>
        }
    </div>
</div>
